<html>
  <head>
	<%= render partial: "bootstrap"%>

  </head>
<body>


<%= render partial: "navbar"%>


<% @produto.errors.full_messages.each do |message|%>
    <div class="alert alert‐danger form-inline" role="alert"><%=message%></div>
<% end %>   

    <%= form_for @produto do |f| %>
    <div class = "container">
        <div class="form‐group">
            <%= f.label :Nome %>
            <input class="form-control" <%= f.text_field :nome %></>
        </div>

        <div class="form‐group">
            <%= f.label :descricao %>
            <textarea class="form-control"  rows = "4" <%= f.text_area :descricao%> </>
        </div>

        <br/>

        <div class="form‐group">
            <%= f.label :departamento %>
            <%= f.collection_select :departamento_id, @departamentos, :id, :nome, {}, class: "form‐control" %>
        </div>
        <br/>
        <div class="form-inline">
            <div class="form‐group">   
                <%= f.label :Quantidade %>
                <%= f.number_field :quantidade, step: 1, class: "form-control2"%>
            
                <%= f.label :Preço %>
                <%= f.number_field :preco, step: 0.01, class: "form-control2"%>
                
                
                <button class="btn btn-primary form-control2" <%= f.submit %> </>
                <%= f.submit texto_da_acao, class: "btn btn‐primary" %>
            </div>    
        </div>
        <br/>
        
    
    </form>
    
    <%end%>

</body>
</html> 